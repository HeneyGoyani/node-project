<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Books â€” Card View</title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #0f172a;
      color: #f9fafb;
      min-height: 100vh;
    }

    /* ðŸ”¥ Heavy Unique Header */
    header.main-header {
      background:  linear-gradient(90deg, #43e97b, #38f982); 
      color: #fff;
      padding: 22px 0;
      box-shadow: 0 10px 30px rgba(0,0,0,0.4);
      position: sticky;
      top: 0;
      z-index: 1000;
      border-bottom: 3px solid rgba(255,255,255,0.2);
      backdrop-filter: blur(10px);
    }
    header.main-header .container {
      max-width: 1200px;
      margin: auto;
      padding: 0 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .logo {
      font-size: 1.6rem;
      font-weight: 800;
      letter-spacing: 2px;
      background: linear-gradient(90deg,#b84be4,#d674a5);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    .nav-links {
      display: flex;
      gap: 20px;
    }
    .nav-links a {
      text-decoration: none;
      color: #f9fafb;
      font-weight: 600;
      padding: 10px 16px;
      border-radius: 10px;
      transition: all 0.3s ease;
    }
    .nav-links a:hover {
      background: rgba(255,255,255,0.15);
      transform: translateY(-2px);
    }

    .btn-add {
      background: linear-gradient(135deg,#f59e0b,#d97706);
      padding: 12px 20px;
      border-radius: 12px;
      font-weight: 700;
      border: none;
      cursor: pointer;
      font-size: 0.95rem;
      color: #fff;
      box-shadow: 0 6px 15px rgba(0,0,0,0.3);
      transition: all 0.3s ease;
    }
    .btn-add:hover {
      background: linear-gradient(135deg,#facc15,#f59e0b);
      transform: translateY(-3px) scale(1.05);
      box-shadow: 0 12px 25px rgba(0,0,0,0.45);
    }

    /* ðŸ”Ž Optional Filter/Search Form Styling */
    .filter-form {
      margin: 30px auto;
      padding: 25px;
      max-width: 800px;
      background: rgba(255,255,255,0.05);
      border: 2px solid rgba(255,255,255,0.1);
      border-radius: 18px;
      box-shadow: 0 8px 25px rgba(0,0,0,0.3);
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
      backdrop-filter: blur(8px);
    }
    .filter-form input,
    .filter-form select {
      flex: 1;
      padding: 12px 14px;
      border-radius: 10px;
      border: none;
      font-size: 0.95rem;
      background: rgba(255,255,255,0.15);
      color: #fff;
      outline: none;
      transition: all 0.3s ease;
    }
    .filter-form input::placeholder { color: #d1d5db; }
    .filter-form input:focus,
    .filter-form select:focus {
      background: rgba(255,255,255,0.25);
      box-shadow: 0 0 10px rgba(34,197,94,0.6);
    }
    .filter-form button {
      padding: 12px 20px;
      background: linear-gradient(135deg,#10b981,#047857);
      border: none;
      border-radius: 10px;
      font-weight: bold;
      color: #fff;
      cursor: pointer;
      transition: 0.3s;
    }
    .filter-form button:hover {
      background: linear-gradient(135deg,#34d399,#059669);
      transform: translateY(-2px);
    }

    /* Cards */
    .container {
      max-width: 1200px;
      margin: 40px auto;
      padding: 0 20px;
    }
    .header h1 {
      font-size: 2.2rem;
      color: #facc15;
      margin-bottom: 25px;
    }
    .cards {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 24px;
    }
    .card {
      background: rgba(255,255,255,0.05);
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 8px 20px rgba(0,0,0,0.4);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      display: flex;
      flex-direction: column;
      border: 1px solid rgba(255,255,255,0.1);
    }
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 16px 40px rgba(0,0,0,0.6);
    }

    /* âœ… New image section */
    .card-media {
      width: 100%;
      height: 220px;
      background: #1e293b;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 12px;
    }
    .card-media img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
      border-radius: 10px;
    }

    .card-body { padding: 20px; flex: 1; }
    .book-title { color: #facc15; font-weight: 700; font-size: 1.1rem; }
    .book-no { color: #93c5fd; margin-bottom: 10px; }

    .btn-edit {
      background: #10b981;
      color: #fff;
      padding: 8px 14px;
      border-radius: 8px;
      font-weight: 600;
      border: none;
      cursor: pointer;
      transition: 0.3s;
    }
    .btn-edit:hover { background: #059669; transform: scale(1.05); }
    .btn-delete {
      background: #ef4444;
      color: #fff;
      padding: 8px 14px;
      border-radius: 8px;
      font-weight: 600;
      border: none;
      cursor: pointer;
      transition: 0.3s;
    }
    .btn-delete:hover { background: #b91c1c; transform: scale(1.05); }
  </style>
</head>
<body>
  <!-- ðŸ”¥ Heavy Header -->
  <header class="main-header">
    <div class="container">
      <div class="logo"> Library Manager</div>
      <nav class="nav-links">
        <a href="/">Home</a>
        <a href="/books">Books</a>
      </nav>
      <div>
        <a href="/add"><button class="btn btn-add">+ Add Book</button></a>
      </div>
    </div>
  </header>

  <!-- ðŸ”Ž Example Filter Form -->
  <section class="container">
    <form class="filter-form">
      <input type="text" placeholder="Search by Title..." />
      <select>
        <option>All Languages</option>
        <option>English</option>
        <option>Hindi</option>
        <option>Gujarati</option>
      </select>
      <button type="submit">Filter</button>
    </form>
  </section>

  <div class="container">
    <header class="header">
      <h1>Library Books</h1>
    </header>

    <!-- Cards -->
    <section class="cards">
      <% books.forEach((book) => { %>
        <article class="card">
          <div class="card-media">
            <% if (book.imageUrl) { %>
              <img src="<%= book.imageUrl %>" alt="Cover of <%= book.bookName %>" 
                   onerror="this.onerror=null;this.src='https://via.placeholder.com/200x250?text=No+Image';"/>
            <% } else { %>
              <img src="https://via.placeholder.com/200x250?text=No+Image" alt="No image available"/>
            <% } %>
          </div>
          <div class="card-body">
            <div class="book-title"><%= book.bookName %></div>
            <div class="book-no">Book No: <%= book.bookNo %></div>
            <p><strong>Author:</strong> <%= book.author %></p>
            <p><strong>Language:</strong> <%= book.language %></p>
            <p><strong>Published:</strong> <%= book.publishedDate %></p>
            <div style="margin-top:15px; display:flex; gap:10px;">
              <a href="/edit-book/<%= book.bookNo %>"><button class="btn-edit">Edit</button></a>
              <a href="/delete-book/<%= book.bookNo %>"><button class="btn-delete">Delete</button></a>
            </div>
          </div>
        </article>
      <% }) %>
    </section>
  </div>
</body>
</html>
