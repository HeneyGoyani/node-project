<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Users</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }

    body {
      background: linear-gradient(135deg, #43e97b, #38f9d7);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding: 40px 20px;
    }

    .container {
      background: #fff;
      padding: 25px 30px;
      border-radius: 15px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      width: 95%;
      max-width: 1000px;
    }

    h1 {
      text-align: center;
      margin-bottom: 25px;
      color: #222;
      text-transform: capitalize;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
      overflow: hidden;
      border-radius: 10px;
    }

    thead {
      background: #43e97b;
      color: white;
    }

    thead th {
      padding: 12px 10px;
      text-align: left;
      font-size: 15px;
      font-weight: 600;
    }

    tbody tr {
      transition: 0.3s;
    }

    tbody tr:nth-child(even) {
      background: #f9f9f9;
    }

    tbody tr:hover {
      background: rgba(67, 233, 123, 0.1);
      transform: scale(1.01);
    }

    td {
      padding: 10px;
      font-size: 14px;
      color: #333;
      border-bottom: 1px solid #eee;
    }

    td a {
      text-decoration: none;
      padding: 6px 10px;
      border-radius: 6px;
      font-size: 13px;
      font-weight: 500;
      transition: 0.3s;
    }

    td a[href*="editRecord"] {
      background: #38b000;
      color: white;
    }

    td a[href*="editRecord"]:hover {
      background: #2b8900;
    }

    td a[href*="deleteRecord"] {
      background: #ff4d4f;
      color: white;
      margin-left: 6px;
    }

    td a[href*="deleteRecord"]:hover {
      background: #d9363e;
    }

    .add-btn {
      display: inline-block;
      margin-top: 20px;
      padding: 10px 20px;
      background: linear-gradient(135deg, #43e97b, #38f9d7);
      color: #fff;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 600;
      transition: 0.3s;
    }

    .add-btn:hover {
      background: linear-gradient(135deg, #38f9d7, #43e97b);
      transform: scale(1.05);
    }

    @media (max-width: 768px) {
      table {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
      }

      td,
      th {
        font-size: 13px;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>View Users</h1>

    <table>
      <thead>
        <tr>
          <th>SrNo.</th>
          <th>Name</th>
          <th>Email</th>
          <th>Password</th>
          <th>Number</th>
          <th>Gender</th>
          <th>Hobby</th>
          <th>City</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% record.map((val,i)=>{ 
          let {id,name,email,password,number,gender,hobby,city} = val; 
        %>
          <tr>
            <td><%= ++i %></td>
            <td><%= name %></td>
            <td><%= email %></td>
            <td><%= password %></td>
            <td><%= number %></td>
            <td><%= gender %></td>
            <td><%= hobby %></td>
            <td><%= city %></td>
            <td>
              <a href="/editRecord?id=<%= id %>">Edit</a>
              <a href="/deleteRecord?deleteId=<%= id %>">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div style="text-align:center;">
      <a class="add-btn" href="/">+ Add New User</a>
    </div>
  </div>
</body>

</html>
