<%- include('header') %>
<!-- ============================================================== -->
<!-- Page Wrapper -->
<!-- ============================================================== -->
<div class="page-wrapper">
  <!-- ============================================================== -->
  <!-- Bread crumb -->
  <!-- ============================================================== -->
  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-12 d-flex no-block align-items-center px-4">
        <h4 class="page-title">Blog Details</h4>
        <div class="ml-auto text-right">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">View All Blog</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>

  <!-- ============================================================== -->
  <!-- Container fluid -->
  <!-- ============================================================== -->
  <div class="page-container">
    <div class="page-header text-center mb-4">
      <h1 class="fw-bold text-dark">Blog Collection</h1>
      <p class="text-muted">Discover amazing content across various categories</p>
    </div>

    <!-- Filter Section -->
    <div class="filter-section text-center mb-5">
      <h5 class="fw-semibold mb-3">Filter Blogs by Category</h5>
      <div class="filter-buttons d-flex flex-wrap justify-content-center gap-2">
        <% const categories = ['all','Technology','Lifestyle','Travel','Health','Education','Business','Entertainment','Science','Fashion','History & Culture','Photography']; %>
        <% categories.forEach(cat => { %>
          <a href="/blogs/view-blog/category/<%= cat %>"
             class="filter-btn <%= category === cat ? 'active-btn' : '' %>">
             <%= cat %>
          </a>
        <% }) %>
      </div>
    </div>

    <!-- Blog Cards -->
    <div class="blogs-container d-flex flex-wrap justify-content-center gap-4 px-4">
      <% blogs.forEach(function(blog) { %>
        <div class="blog-card shadow-lg">
          <div class="image-container">
            <img src="<%= blog.image %>" class="blog-image" alt="<%= blog.title %>">
            <div class="overlay">
              <div class="icon-buttons">
                <button class="icon-btn heart-btn" onclick="toggleHeart(this)">
                  <i class="far fa-heart"></i>
                </button>
                <button class="icon-btn save-btn" onclick="toggleSave(this)">
                  <i class="far fa-bookmark"></i>
                </button>
              </div>
            </div>
          </div>

          <div class="card-body p-3">
            <span class="category-badge"><%= blog.category %></span>
            <h5 class="card-title mt-2 fw-semibold"><%= blog.title %></h5>
            <p class="blog-desc text-muted">
              <%= blog.desc.split(" ").slice(0, 30).join(" ") %>
              <% if (blog.desc.split(" ").length > 40) { %> ... <% } %>
            </p>

            <p class="meta-info small text-secondary mt-2 mb-3">
              <i class="fas fa-calendar-alt"></i>
              <%= new Date(blog.pubDate).toLocaleDateString() %> â€¢ 
              <%= new Date(blog.pubDate).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %>
            </p>

            <div class="author-info d-flex align-items-center">
              <img src="<%= blog.authImage %>" class="author-img me-2" alt="<%= blog.author %>">
              <span class="author-name"><%= blog.authName %></span>
            </div>
          </div>

          <div class="card-footer text-center pb-3">
            <a href="/blogs/view-singleBlog/<%= blog._id %>" class="btn-view">
              <i class="fas fa-book-open me-1"></i> Read Article
            </a>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- Pagination -->
    <div class="pagination text-center mt-5 mb-4">
      <% if (currentPage > 1) { %>
        <a href="?page=<%= currentPage - 1 %>" class="page-link">Prev</a>
      <% } %>
      <% for (let i = 1; i <= totalPages; i++) { %>
        <a href="?page=<%= i %>" class="page-link <%= i === currentPage ? 'active' : '' %>">
          <%= i %>
        </a>
      <% } %>
      <% if (currentPage < totalPages) { %>
        <a href="?page=<%= currentPage + 1 %>" class="page-link">Next</a>
      <% } %>
    </div>
  </div>
</div>

<style>
  .page-container {
    font-family: 'Poppins', sans-serif;
  }

  .filter-btn {
    padding: 8px 18px;
    border-radius: 25px;
    border: 1px solid #ccc;
    color: #333;
    text-decoration: none;
    transition: all 0.3s;
    background: #fff;
  }
  .filter-btn:hover,
  .filter-btn.active-btn {
    background: #007bff;
    color: #fff;
    border-color: #007bff;
  }

  .blogs-container {
    row-gap: 2rem;
  }

  .blog-card {
    width: 320px;
    border-radius: 15px;
    overflow: hidden;
    background: #fff;
    transition: all 0.3s ease;
    position: relative;
  }
  .blog-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
  }

  .image-container {
    position: relative;
    height: 200px;
    overflow: hidden;
  }
  .blog-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform .4s ease;
  }
  .blog-card:hover .blog-image {
    transform: scale(1.1);
  }

  .overlay {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    display: flex;
    justify-content: flex-end;
    padding: 10px;
    opacity: 0;
    transition: all 0.3s;
    background: linear-gradient(to top, rgba(0,0,0,0.4), transparent);
  }
  .blog-card:hover .overlay {
    opacity: 1;
  }

  .icon-buttons {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .icon-btn {
    background: rgba(255,255,255,0.9);
    border: none;
    border-radius: 50%;
    padding: 8px;
    cursor: pointer;
    transition: all 0.3s;
  }
  .icon-btn:hover {
    background: #007bff;
    color: #fff;
  }

  .category-badge {
    background: #e7f1ff;
    color: #007bff;
    font-size: 12px;
    padding: 4px 10px;
    border-radius: 12px;
  }

  .author-img {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    object-fit: cover;
  }

  .btn-view {
    display: inline-block;
    padding: 10px 20px;
    border-radius: 25px;
    background: #007bff;
    color: #fff;
    text-decoration: none;
    transition: all 0.3s;
  }
  .btn-view:hover {
    background: #0056b3;
  }

  .pagination .page-link {
    margin: 0 5px;
    padding: 8px 14px;
    border-radius: 8px;
    background: #f1f1f1;
    color: #333;
    text-decoration: none;
    transition: all 0.3s;
  }
  .pagination .page-link:hover,
  .pagination .page-link.active {
    background: #007bff;
    color: #fff;
  }
</style>

<script>
  function toggleHeart(btn) {
    const icon = btn.querySelector('i');
    icon.classList.toggle('far');
    icon.classList.toggle('fas');
    icon.style.color = icon.classList.contains('fas') ? '#e63946' : '#000';
  }

  function toggleSave(btn) {
    const icon = btn.querySelector('i');
    icon.classList.toggle('far');
    icon.classList.toggle('fas');
    icon.style.color = icon.classList.contains('fas') ? '#007bff' : '#000';
  }
</script>

<%- include('footer') %>
